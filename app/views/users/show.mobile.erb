<% @page_title = "#{@user.username}" %>
<div class="page_content user_profile">

  <div class="avatar">
    <%= avatar_image_tag @user %>
    <h2><%= @user.username %></h2>

    <% unless !current_user? || @user == current_user %>
      <p><%= link_to "Start a conversation", new_conversation_with_path(username: @user.username) %></p>
    <% end %>
  </div>

  <% if @user.banned? %>
    <p class="banned"><%= @user.username %> is banned!</p>
  <% end %>

  <table class="userinfo">
    <% if @user.realname? %><tr>
      <th>Real name</th>
      <td><%= @user.realname %></td>
    </tr><% end %>
    <% if @user.location? %><tr>
      <th>Location</th>
      <td><%= @user.location %></td>
    </tr><% end %>
    <% if @user.birthday? %><tr>
      <th>Birthday</th>
      <td><%= @user.birthday.strftime("%b %d") %></td>
    </tr><% end %>
    <% if @user.website? %><tr>
      <th>Web site</th>
      <td><%= link_to @user.website, @user.website %></td>
    </tr><% end %>

    <% if @user.msn? %><tr>
      <th>MSN</th>
      <td><%= @user.msn %></td>
    </tr><% end %>
    <% if @user.gtalk? %><tr>
      <th>Gtalk</th>
      <td><%= @user.gtalk %></td>
    </tr><% end %>
    <% if @user.aim? %><tr>
      <th>AIM</th>
      <td><%= link_to @user.aim, "aim:GoIM?screenname=#{CGI.escape(@user.aim)}&message=Hello%20from%20#{CGI.escape(Sugar.config.forum_name)}" %></td>
    </tr><% end %>
    <% if @user.twitter? %><tr>
      <th>Twitter</th>
      <td><%= link_to @user.twitter, "http://www.twitter.com/#{@user.twitter}" %></td>
    </tr><% end %>
    <% if @user.flickr? %><tr>
      <th>Flickr</th>
      <td><%= link_to @user.flickr, "http://www.flickr.com/photos/#{@user.flickr}/" %></td>
    </tr><% end %>
    <% if @user.last_fm? %><tr>
      <th>Last.fm</th>
      <td><%= link_to @user.last_fm, "http://www.last.fm/user/#{@user.last_fm}" %></td>
    </tr><% end %>

    <% if @user.gamertag? %><tr>
      <th>Xbox Live</th>
      <td><%= @user.gamertag %></td>
    </tr><% end %>
    <% if @user.sony? %><tr>
      <th>PlayStation</th>
      <td><%= @user.sony %></td>
    </tr><% end %>
    <% if @user.nintendo? %><tr>
      <th>Nintendo ID</th>
      <td><%= @user.nintendo %></td>
    </tr><% end %>
    <% if @user.nintendo_switch? %><tr>
      <th>Nintendo Switch ID</th>
      <td><%= @user.nintendo_switch %></td>
    </tr><% end %>
    <% if @user.steam? %><tr>
      <th>Steam ID</th>
      <td><%= @user.steam %></td>
    </tr><% end %>
    <% if @user.battlenet? %><tr>
      <th>Battle.net BattleTag</th>
      <td><%= @user.battlenet %></td>
    </tr><% end %>
    <% if @user.inviter %><tr>
      <th>Invited by</th>
      <td><%= profile_link(@user.inviter) %></td>
    </tr><% end %>
    <tr>
      <th>Joined</th>
      <td><%= time_tag @user.created_at, class: 'relative' %></td>
    </tr>
    <tr>
      <th>Last active</th>
      <td><%= @user.online? ? "<strong>Online now</strong>".html_safe : time_tag(@user.last_active, class: 'relative') %></td>
    </tr>
    <tr>
      <th>Discussions</th>
      <td><%= link_to @user.discussions.viewable_by(current_user).count, discussions_user_path(id: @user.username) %></td>
    </tr>
    <tr>
      <th>Participated</th>
      <td><%= link_to @user.participated_discussions.viewable_by(current_user).count, participated_user_path(id: @user.username) %></td>
    </tr>
    <tr>
      <th>Posts</th>
      <td><%= @user.discussion_posts.viewable_by(current_user).count %></td>
    </tr>
    <tr>
      <th>Users invited</th>
      <td><%= @user.invitees.count %></td>
    </tr>
    <% if @user.previous_usernames.any? %>
      <tr>
        <th>Previously Known As</th>
        <td>
          <ul>
            <% @user.previous_usernames.uniq.each do |username| %>
              <li>
                <%= username %>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </table></div>
